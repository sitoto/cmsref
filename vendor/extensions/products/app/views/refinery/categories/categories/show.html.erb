<div id="content">
  <div id="cwrapper">
    <div id="banner">
      <img src="/assets/banner-ventilating.jpg">
    </div>
      <div class="bread_crumb">
	<%= link_to "Home", '/' %>
	<%= "&gt;".html_safe %>
	<%= link_to @category_top.name, refinery.categories_category_path(@category_top) %>
	<%= "&gt;".html_safe %>
	<%= link_to @category_sub.name,  refinery.categories_category_path(@category_sub)  , :class => "current" %>
      </div>
    <div class="box">
      <div class="sidebar">
	<h1><%= @category_top.name %></h1>

	<div class="submenu">
	  <ul>
	    <li class="open current">
	      <%= link_to @category.name, refinery.categories_category_path(@category) %>
	    </li>
	  </ul>
	  <%=raw @html %>
	</div>
      </div>
      <div class="page_content">
	<h1><%= @category.name %></h1>

	<% @category.products.each do |p| %>

	<div class="product-list">
	  <div class="col1">
            <%= image_fu p.photo,'162x162' %>
	  </div>
	  <div class="col2">
	    <div class="title"><%=raw p.title %></div>
	    <%=raw p.title_info %> 
	    <%= link_to 'Details...', refinery.products_product_path(p), :class => 'more' %>
	  </div>
	  <div class="clearfix"></div>
	</div>
	
      <% end %>

      </div>
      <div class="clearfix"></div>

    </div>
  </div>
</div>
