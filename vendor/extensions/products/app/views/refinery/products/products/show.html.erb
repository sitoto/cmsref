<div id="content">
  <div id="cwrapper">
    <div id="banner">
      <img src="/assets/banner-<%= @category_top.sort_order %>.jpg">
    </div>
    <% unless @page.home? %>
      <div class="bread_crumb">
	<%= link_to "Home", '/' %>
	<%= "&gt;".html_safe %>
	<%= link_to @category_top.name, refinery.categories_category_path(@category_top) %>
	<%= "&gt;".html_safe %>
	<%= link_to @category_last.name,  refinery.categories_category_path(@category_last)  , :class => "current" %>
 

      </div>
    <% end %>
    <div class="box">
      <div class="sidebar">
 	<h1><%= @category_top.name %></h1>

	<div class="submenu">
	  <%=raw @html %>
	</div>

      </div>
      <div class="page_content">
	<div class="back">
          <a href="javascript:history.back();">BACK</a>
	</div>
	<div class="col3">
	  <%= image_fu @product.photo, nil %>
	</div>
	<div class="col4">
	  <div class="title"><%=raw @product.title %></div>
	  <%=raw @product.title_info %>
	  <%=raw @product.note %> 
	</div>
	<div class="clearfix"></div>
	<div id="tab">
	  <ul class="nav">
	    <% [:specification, :accessories, :dimension].each_with_index do |part, part_index| %>
          <li class='nav-<%= part_index %>'>
	  <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/products/product", :default => part.to_s.titleize), "#nav#{part_index}", :class =>  part_index == 0 ? 'current' : '' %>
          </li>
        <% end %>
	  </ul>
	  <div class="list-wrap">
            <% [ :specification, :accessories, :dimension].each_with_index do |part, part_index| %>
	      <div class='page_part' id='nav<%= part_index %>' style= <%= part_index == 0 ? 'display:block' : 'display:none' %>>
		<%=raw @product[part] -%>
		<br>
              </div>
        <% end %>

	  </div>
	</div>

      </div>
      <div class="clearfix"></div>

    </div>
  </div>
</div>
